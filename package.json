  "devDependencies": {
    "@types/node": "^18.16.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  },
